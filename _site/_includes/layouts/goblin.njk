---
layout: layouts/default.njk
---

{%- from 'macro.btn.njk' import btn -%}

<figure class="flex-(& col) items-center gap-6 relative md:(flex-row-reverse items-start gap-12)">
  <img src="/_assets/img/goblin-{{ title | slugify }}.jpg" alt="{{ title }} photo" class="p-px border-(& black) w-full max-w-xs bg-gradient-to-br from-sec-200 to-sec-700 shrink-0 rounded-xl shadow-2xl" />
  <figcaption class="prose max-w-[80ch] grow md:text-lg">
    {{ desc | md | safe }}
    {%- if gear %}
      <ul class="list-none m-0 p-0 flex-(& wrap) gap-6 [&>li]:(m-0 p-2 border-(t l sec-300/20) bg-pri-500/20 rounded-lg shadow-lg)">
        {%- for item in gear %}
          <li>
            <svg xmlns="http://www.w3.org/2000/svg" width="280" height="100" role="img" class="w-28 h-auto fill-current">
              <title>{{ item }}</title>
              <use href="/_assets/logos.svg#logo-{{ item | slugify }}" />
            </svg>
          </li>
        {%- endfor %}
      </ul>
    {%- endif %}
    <span class="text-sec-300 block absolute -top-2.5 right-1/2 translate-x-1/2 animate-ping md:(-right-2.5 translate-x-0)" aria-hidden="true"><iconify-icon icon="mdi:sparkles" width="24px" height="24px" class="iconify"></iconify-icon></span>
  </figcaption>
</figure>
<p class="divider pt-6">
{{ btn({
    title: 'Back',
    ico: 'mdi:arrow-left',
    url: '/'
  }) }}
</p>
